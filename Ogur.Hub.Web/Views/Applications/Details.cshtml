@* File: Hub.Web/Views/Applications/Details.cshtml *@
@model ApplicationDetailsViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2>@Model.Title</h2>
                <p class="text-muted">@Model.Description</p>
            </div>
            <div>
                <a asp-controller="@Model.ControllerName" asp-action="Edit" asp-route-id="@Model.EntityId" class="btn btn-primary">
                    <i class="dx-icon-edit"></i> Edit
                </a>
                <a asp-controller="@Model.ControllerName" asp-action="Index" class="btn btn-secondary">
                    <i class="dx-icon-back"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="dx-icon-info"></i> Application Information</h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <th width="40%">Name:</th>
                            <td><code>@Model.Application.Name</code></td>
                        </tr>
                        <tr>
                            <th>Display Name:</th>
                            <td>@Model.Application.DisplayName</td>
                        </tr>
                        <tr>
                            <th>Current Version:</th>
                            <td><span class="badge bg-info">@Model.Application.CurrentVersion</span></td>
                        </tr>
                        <tr>
                            <th>Status:</th>
                            <td>
                                @if (Model.Application.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Created:</th>
                            <td>@Model.Application.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="dx-icon-doc"></i> Description</h5>
            </div>
            <div class="card-body">
                <p>@(string.IsNullOrEmpty(Model.Application.Description) ? "No description provided." : Model.Application.Description)</p>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="dx-icon-key"></i> Licenses</h5>
                <span class="badge bg-primary">@Model.LicensesCount</span>
            </div>
            <div class="card-body">
                <p class="mb-2"><strong>Total:</strong> @Model.LicensesCount</p>
                <p class="mb-0"><strong>Active:</strong> @Model.ActiveLicensesCount</p>
                <a asp-controller="Licenses" asp-action="Index" asp-route-applicationId="@Model.Application.Id" class="btn btn-sm btn-outline-primary mt-2">
                    View All Licenses
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="dx-icon-chart"></i> Statistics</h5>
            </div>
            <div class="card-body">
                <p class="mb-2"><strong>Total Devices:</strong> @Model.DevicesCount</p>
                <p class="mb-0"><strong>Connected:</strong> @Model.ConnectedDevicesCount</p>
            </div>
        </div>
    </div>
</div>