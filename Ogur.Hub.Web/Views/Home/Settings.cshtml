@* File: Hub.Web/Views/Home/Settings.cshtml *@
@model SettingsViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="row mb-4">
    <div class="col-12">
        <h2>@Model.Title</h2>
        <p class="text-muted">@Model.Description</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="dx-icon-user"></i> Account Information</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control" value="@Model.Username" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Role</label>
                    <input type="text" class="form-control" value="@GetRoleDisplayName(Model.IsAdmin)" readonly />
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="dx-icon-preferences"></i> Preferences</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Theme</label>
                    <select class="form-select" id="themeSelect">
                        <option value="light">Light</option>
                        <option value="dark">Dark</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Language <span class="badge bg-secondary">Coming Soon</span></label>
                    <select class="form-select" disabled>
                        <option value="en">English</option>
                        <option value="pl">Polski</option>
                    </select>
                </div>
                <button type="button" class="btn btn-primary" onclick="savePreferences()">
                    <i class="dx-icon-save"></i> Save Preferences
                </button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="dx-icon-key"></i> Change Password <span class="badge bg-secondary">Coming Soon</span></h5>
            </div>
            <div class="card-body">
                <form id="changePasswordForm">
                    <div class="mb-3">
                        <label class="form-label">Current Password</label>
                        <input type="password" class="form-control" id="currentPassword" disabled />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">New Password</label>
                        <input type="password" class="form-control" id="newPassword" disabled />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirm New Password</label>
                        <input type="password" class="form-control" id="confirmPassword" disabled />
                    </div>
                    <button type="button" class="btn btn-primary" disabled>
                        <i class="dx-icon-check"></i> Change Password
                    </button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="dx-icon-info"></i> System Information</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <tbody>
                        <tr>
                            <td><strong>Version:</strong></td>
                            <td>1.0.0</td>
                        </tr>
                        <tr>
                            <td><strong>Build Date:</strong></td>
                            <td>@DateTime.Now.ToString("dd/MM/yyyy")</td>
                        </tr>
                        <tr>
                            <td><strong>Environment:</strong></td>
                            <td>Production</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="dx-icon-grid"></i> Grid Preferences <span class="badge bg-secondary">Coming Soon</span></h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Default Page Size</label>
                            <select class="form-select" id="defaultPageSize" disabled>
                                <option value="10">10 rows</option>
                                <option value="15" selected>15 rows</option>
                                <option value="25">25 rows</option>
                                <option value="50">50 rows</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Default Sort Order</label>
                            <select class="form-select" id="defaultSortOrder" disabled>
                                <option value="asc">Ascending</option>
                                <option value="desc" selected>Descending</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Show Filter Row</label>
                            <select class="form-select" id="showFilterRow" disabled>
                                <option value="true" selected>Yes</option>
                                <option value="false">No</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Show Search Panel</label>
                            <select class="form-select" id="showSearchPanel" disabled>
                                <option value="true" selected>Yes</option>
                                <option value="false">No</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="alert alert-info mb-0">
                    <i class="dx-icon-info"></i> Grid preferences will be saved per user and applied automatically to all data grids.
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetRoleDisplayName(bool isAdmin)
    {
        // Get role from session
        var roleStr = Context.Session.GetString("Role");
        if (string.IsNullOrEmpty(roleStr))
        {
            return isAdmin ? "Administrator" : "User";
        }

        if (!int.TryParse(roleStr, out int role))
        {
            return isAdmin ? "Administrator" : "User";
        }

        var roles = new List<string>();
        if ((role & 8) != 0) roles.Add("Admin");
        if ((role & 4) != 0) roles.Add("Moderator");
        if ((role & 2) != 0) roles.Add("Viewer");
        if ((role & 1) != 0) roles.Add("User");
        
        if (roles.Count == 0) return "No permissions";
        return string.Join(", ", roles);
    }
}

@section Scripts {
    <script>
        $(function() {
            // Load current theme
            const currentTheme = localStorage.getItem('theme') || 'light';
            $('#themeSelect').val(currentTheme);
        });

        function savePreferences() {
            const theme = $('#themeSelect').val();
            localStorage.setItem('theme', theme);
            
            // Apply theme
            if (theme === 'dark') {
                $('#dx-theme').attr('href', 'https://cdn3.devexpress.com/jslib/23.2.3/css/dx.dark.css');
                document.documentElement.setAttribute('data-bs-theme', 'dark');
                document.documentElement.classList.add('dark-mode');
            } else {
                $('#dx-theme').attr('href', 'https://cdn3.devexpress.com/jslib/23.2.3/css/dx.light.css');
                document.documentElement.setAttribute('data-bs-theme', 'light');
                document.documentElement.classList.remove('dark-mode');
            }
            
            DevExpress.ui.notify("Theme saved successfully!", "success", 2000);
        }

    </script>
}