@model BaseDetailsViewModel

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2>@Model.Title</h2>
                <p class="text-muted">@Model.Description</p>
            </div>
            <div>
                @if (!string.IsNullOrEmpty(Model.EditAction))
                {
                    <a asp-controller="@Model.ControllerName" asp-action="@Model.EditAction" asp-route-id="@Model.EntityId" class="btn btn-primary">
                        <i class="dx-icon-edit"></i> Edit
                    </a>
                }
                <a asp-controller="@Model.ControllerName" asp-action="Index" class="btn btn-secondary">
                    <i class="dx-icon-back"></i> Back to List
                </a>
                @RenderSection("AdditionalActions", required: false)
            </div>
        </div>
    </div>
</div>

<div class="row">
    @RenderBody()
</div>

@RenderSection("Scripts", required: false)